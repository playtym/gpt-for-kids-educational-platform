# Production Environment Variables for GPT for Kids
NODE_ENV=production
PORT=3000
FRONTEND_PORT=8080
HOST=0.0.0.0

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:3000

# API Keys (REPLACE WITH YOUR ACTUAL KEYS!)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security
SESSION_SECRET=change_this_to_a_super_secret_random_string_in_production
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (if you add one later)
# DATABASE_URL=postgresql://username:password@localhost:5432/gpt_for_kids

# Redis (if you add it later)
# REDIS_URL=redis://localhost:6379

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Content safety
CONTENT_SAFETY_ENABLED=true
MAX_MESSAGE_LENGTH=1000

# Features
ENABLE_METRICS=true
ENABLE_FEEDBACK=true
ENABLE_ANALYTICS=false
