# GPT for Kids MCP Server - Railway Environment Variables
# Copy these variables to your Railway project dashboard

# =============================================================================
# REQUIRED: AI API Keys
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# REQUIRED: Server Configuration
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_NAME=gpt-for-kids-educational-platform
MCP_SERVER_VERSION=2.0.0
ENABLE_MCP_LOGGING=true
ENABLE_AGENT_ORCHESTRATOR=true

# =============================================================================
# Performance & Caching
# =============================================================================
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_VALIDATION=true
MAX_CONNECTIONS=50
CACHE_TTL=3600

# =============================================================================
# Security & Safety
# =============================================================================
CONTENT_SAFETY_ENABLED=true
RATE_LIMIT_ENABLED=true
HELMET_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# =============================================================================
# Optional: Advanced Configuration
# =============================================================================
# REDIS_URL=redis://username:password@host:port (for distributed caching)
# WEBHOOK_URL=https://your-webhook-url.com (for notifications)
# SENTRY_DSN=https://your-sentry-dsn.com (for error tracking)

# =============================================================================
# Railway-specific Variables (automatically set by Railway)
# =============================================================================
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=auto-generated
# RAILWAY_SERVICE_ID=auto-generated
# RAILWAY_DEPLOYMENT_ID=auto-generated
