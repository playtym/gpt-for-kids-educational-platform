{
  "name": "@gpt-for-kids/backend",
  "version": "2.0.0",
  "description": "MCP server for GPT for Kids educational platform with microservices architecture",
  "main": "server.js",
  "type": "module",
  "private": true,
  "bin": {
    "gpt-for-kids-server": "./server.js"
  },
  "scripts": {
    "dev": "nodemon server.js",
    "build": "tsc && npm run copy-assets",
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "type-check": "tsc --noEmit",
    "copy-assets": "cp -r src/assets dist/ 2>/dev/null || :",
    "clean": "rm -rf dist logs/*.log",
    "docs": "typedoc src --out docs/api"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.9",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "openai": "^4.87.3",
    "winston": "^3.10.0",
    "ws": "^8.18.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "education",
    "ai",
    "children",
    "safety",
    "mcp",
    "model-context-protocol",
    "microservices",
    "agents",
    "backend",
    "api"
  ],
  "mcp": {
    "server": {
      "name": "gpt-for-kids-educational-platform",
      "version": "2.0.0",
      "description": "MCP server for educational AI platform with dynamic agent orchestration",
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": true,
        "logging": true
      }
    }
  }
}
