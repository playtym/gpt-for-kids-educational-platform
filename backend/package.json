{
  "name": "@gpt-for-kids/backend",
  "version": "1.0.0",
  "description": "Educational backend server for GPT for Kids platform",
  "main": "dist/server.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon fast-server.js",
    "build": "tsc && npm run copy-assets",
    "start": "node dist/server.js",
    "start:legacy": "node fast-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "copy-assets": "cp -r src/assets dist/ 2>/dev/null || :",
    "clean": "rm -rf dist logs/*.log",
    "docs": "typedoc src --out docs/api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "dotenv": "^16.3.1",
    "openai": "^4.87.3",
    "@anthropic-ai/sdk": "^0.20.9",
    "zod": "^3.21.4",
    "winston": "^3.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/node": "^20.5.0",
    "@types/jest": "^29.5.3",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "typedoc": "^0.24.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "education",
    "ai",
    "children",
    "safety",
    "backend",
    "api"
  ]
}
